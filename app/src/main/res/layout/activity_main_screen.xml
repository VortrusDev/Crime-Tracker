<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context="edu.floridapoly.mobiledev.crimetrackerapp.MainScreenActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textSize="35sp"
        android:textAlignment="center"
        android:text="@string/app_name"
        android:textColor="@color/white_text_color"
        app:fontFamily="sans-serif">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:textAlignment="center"
        android:text="@string/app_version"
        android:textColor="@color/white_text_color"
        app:fontFamily="sans-serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:padding="5dp"
            app:srcCompat="@drawable/activities_home_icon"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/home_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="30sp"
            android:text="@string/action_activities"
            android:textColor="@color/secondary_color"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:padding="5dp"
            app:srcCompat="@drawable/map_home_icon"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/home_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="30sp"
            android:text="@string/action_map_view"
            android:textColor="@color/secondary_color"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:padding="5dp"
            app:srcCompat="@drawable/settings_home_icon"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/home_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="30sp"
            android:text="@string/action_settings"
            android:textColor="@color/secondary_color"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>
</LinearLayout>
